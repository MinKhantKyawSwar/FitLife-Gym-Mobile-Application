<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_white">

    <!-- Main Content Container -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center">

        <!-- Welcome To Text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome To"
            android:textSize="18sp"
            android:textColor="@color/text_dark_secondary"
            android:layout_marginBottom="24dp" />

        <!-- App Icon Placeholder (Rounded Square) -->
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_app_icon_placeholder"
            android:layout_marginBottom="24dp"
            android:contentDescription="FitLife App Icon" />

        <!-- FitLife Text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FitLife"
            android:textSize="42sp"
            android:textStyle="bold"
            android:textColor="@color/text_dark_primary"
            android:fontFamily="sans-serif-medium" />

    </LinearLayout>

</FrameLayout>
