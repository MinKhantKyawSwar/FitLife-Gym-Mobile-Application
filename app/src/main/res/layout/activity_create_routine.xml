<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_white">

    <!-- Toolbar with Back Button -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/background_white"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:navigationIcon="?attr/homeAsUpIndicator" />

    <!-- Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create Workout Routine"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/text_dark_primary"
                android:layout_marginBottom="24dp" />

            <!-- Workout Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Workout Name:"
                android:textSize="16sp"
                android:textColor="@color/text_dark_primary"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/routineNameEdit"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/input_field_rounded"
                android:padding="16dp"
                android:textSize="16sp"
                android:textColor="@color/text_dark_primary"
                android:hint="Enter workout name"
                android:inputType="textCapWords"
                android:maxLines="1"
                android:layout_marginBottom="24dp" />

            <!-- Exercises Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Exercises"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/text_dark_primary"
                android:layout_marginBottom="16dp" />

            <Button
                android:id="@+id/addExistingExercisesBtn"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Add Existing Exercises"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:background="@drawable/button_dark_grey_rounded"
                android:layout_marginBottom="24dp" />

            <!-- Exercises List Container (empty space for now) -->
            <LinearLayout
                android:id="@+id/exercisesContainer"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="vertical"
                android:background="@color/background_white"
                android:layout_marginBottom="24dp" />

            <!-- Spacer -->
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <!-- Create New Workout Button -->
            <Button
                android:id="@+id/saveRoutineBtn"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Create New Workout"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:background="@drawable/button_dark_grey_rounded" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
