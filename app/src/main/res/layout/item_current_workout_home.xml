<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="0dp"
    app:strokeWidth="1dp"
    app:strokeColor="#E0E0E0"
    app:cardBackgroundColor="@color/background_white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Left side: Workout name and exercise count -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/workoutNameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Squat Exercise"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_dark_primary"
                android:layout_marginBottom="4dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_flame_filled"
                    android:layout_marginEnd="4dp" />

                <TextView
                    android:id="@+id/exerciseCountText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10 Exercises"
                    android:textSize="12sp"
                    android:textColor="@color/text_dark_secondary" />

            </LinearLayout>

        </LinearLayout>

        <!-- Right side: Status -->
        <TextView
            android:id="@+id/statusText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Completed"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/text_dark_primary" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
