<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="0dp"
    app:strokeWidth="1dp"
    app:strokeColor="#E0E0E0"
    app:cardBackgroundColor="@color/background_white"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Left side: Routine name and exercise count -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/routineNameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Full Body Stretchout Workout"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_dark_primary"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/exerciseCountText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10 Exercises"
                android:textSize="12sp"
                android:textColor="@color/text_dark_secondary" />

        </LinearLayout>

        <!-- Right side: Share icon -->
        <ImageView
            android:id="@+id/shareIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_share"
            android:contentDescription="Share"
            android:layout_marginStart="8dp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
